generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  firstName  String?
  lastName   String?
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  state       Int
  ownerId     Int?
}


model State {
  id          Int      @id @default(autoincrement())
  title       String
  index       Int
}
