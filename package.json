{
  "name": "SABack",
  "private": true,
  "description": "Scriptor Artis Backend technical test",
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "compile": "tsc",
    "dev": "concurrently \"ts-node-dev --respawn --watch ./**/*.graphql ./src/index.ts\" \"npm run generate --watch\"",
    "start": "npm run compile && nodemon ./dist/index.js",
    "test": "jest",
    "generate": "graphql-codegen --watch \"src/schema.graphql\""
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.2.2",
    "@apollo/server": "^4.10.0",
    "@parcel/watcher": "^2.4.0",
    "@prisma/client": "^5.10.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "nexus": "^1.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@types/jest": "^29.0.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.0.3",
    "nodemon": "^3.0.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  }
}
